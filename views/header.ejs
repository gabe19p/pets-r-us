<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Google font kit -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;700&display=swap"
    />
    <!-- CSS style sheets -->
    <link rel="stylesheet" type="text/css" href="global.css" />
    <!-- JavaScript links -->
    <script src="./header.js"></script>
    <!-- page title -->
    <title>Pets-R-Us</title>
  </head>

  <body>
    <header>
      <nav id="nav-bar">
        <div id="nav-bar-links">
          <!-- individual link wrappers -->
          <div class="link-wrapper">
            <a href="/">Homepage</a>
          </div>
          <!-- individual link wrappers -->
          <div class="link-wrapper">
            <a href="/grooming">Grooming</a>
          </div>
          <!-- individual link wrappers -->
          <div class="link-wrapper">
            <a href="/boarding">Boarding</a>
          </div>
          <!-- individual link wrappers -->
          <div class="link-wrapper">
            <a href="/training">Training</a>
          </div>
          <!-- individual link wrappers -->
          <div class="link-wrapper">
            <span id="profile">Profile</span>
            <div class="account-wrapper">
              <% if(!thisUser){ %>
              <a href="/register">Register</a>
              <a href="/login">Login</a>
              <% } else{ %> Hello <%= thisUser.username %>
              <a href="/schedule">Schedule</a>
              <a href="/profile">My Profile</a>
              <a href="/logout">Logout</a>
              <% } %>
            </div>
          </div>
        </div>
      </nav>
      <!-- background image -->
      <section class="hero-wrapper">
        <div class="background-image"></div>
        <div id="hero-txt" class="center"><%= title %></div>
      </section>
    </header>
  </body>
</html>

<script>
  let hover = document.querySelector(".account-wrapper");

  hover.style.display = "none";
  document.getElementById("profile").onclick = function () {
    if (hover.style.display == "block") {
      hover.style.display = "none";
    } else {
      hover.style.display = "block";
    }
  };
</script>
